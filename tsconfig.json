{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": [
    "src/**/*"
  ]
}